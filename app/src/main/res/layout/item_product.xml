<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- gambar (tombol share sebelumnya dipindah ke bar rating) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_product_placeholder_2"
                android:contentDescription="@string/product_image_desc" />

        </FrameLayout>

        <!-- Brand -->
        <TextView
            android:id="@+id/product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_brand_placeholder"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:textColor="#d81b60"
            android:textStyle="bold" />

        <!-- Availability label (dipindahkan di atas nama produk) -->
        <TextView
            android:id="@+id/availabilityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/availability_label"
            android:textAllCaps="true"
            android:textColor="#d81b60"
            android:textSize="11sp" />

        <!-- Title -->
        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/product_name_placeholder"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Price -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/product_price_placeholder"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- Rating row dengan tombol share kecil di sebelah kanan review count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star"
                app:tint="#d81b60"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/productRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/rating_placeholder"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/productReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/review_count_placeholder"
                android:textSize="12sp"
                android:textColor="#777777" />

            <!-- Tombol share kecil, dikelilingi stroke #f651ca dan icon juga berwarna #f651ca -->
            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_share_circle"
                android:src="@drawable/ic_share"
                android:contentDescription="@string/share"
                app:tint="#f651ca"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
